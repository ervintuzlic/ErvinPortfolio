@model IEnumerable<ErvinPortfolio.Models.Project>

<div class="row pt-4" style="margin-left:39%;">

	<button type="submit" class="btn btn-primary w-25"><strong>Create New Project</strong></button>

</div>
<div class="row pb-3">
	@foreach(var project in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
					<div class="card">
						<img src="@project.ImageUrl" class="card-img-top rounded" />
						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@project.Name</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>