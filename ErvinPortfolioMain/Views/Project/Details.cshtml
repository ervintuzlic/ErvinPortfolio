@model Project

<form method="post">
        <div class="card container mt-4">
            <div class="card-header ml-0 row" style="background-color:#191919;color:white;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-6">
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1 text-center">
                            <img src="@Model.ImageUrl" width="100%" class="rounded" style="border: 1px #191919 solid;"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="justify-content-center">
                        <a class="btn btn-primary form-control pt-2" style="height:50px;font-size:20px;" asp-action="Index">BACK TO PROJECTS</a>
                    </div>
                </div>
            </div>
            <div class="card-social">
                <div class="row-cols-4 mt-3" style="justify-content: center;margin-left: 45%;margin-bottom: 20px;">
                     <a href="https://www.linkedin.com/in/ervin-tuzlic-b33311241/" target="_blank"><i class="bi bi-linkedin btn-outline-primary btn col-1" style="font-size:1.1em;transition:0.2s;"></i></a>
                     <a href="https://github.com/ervintuzlic" target="_blank"><i class="bi bi-github btn-outline-primary btn col-1" style="font-size:1.1em; transition:0.2s;"></i></a>
                </div>
            </div>
        </div>
</form>